# Coverage configuration for {{ project_name }}
# Generated by mcp-cli tool

[run]
# Source code directories to include in coverage
source = src/mcp_{{ service_name }}

# Files to exclude from coverage
omit = 
    */tests/*
    */test_*
    */__pycache__/*
    */venv/*
    */env/*
    */site-packages/*
    setup.py
    conftest.py
    */migrations/*
    */alembic/*

# Branch coverage
branch = True

# Parallel execution
parallel = True

# Coverage data file
data_file = tests/.coverage

[report]
# Reporting options
precision = 2
show_missing = True
sort = Cover
skip_covered = False
skip_empty = True

# Exclude lines from coverage
exclude_lines =
    # Have to re-enable the standard pragma
    pragma: no cover
    
    # Don't complain about missing debug-only code
    def __repr__
    if self\.debug
    
    # Don't complain if tests don't hit defensive assertion code
    raise AssertionError
    raise NotImplementedError
    
    # Don't complain if non-runnable code isn't run
    if 0:
    if __name__ .__main__.:
    if TYPE_CHECKING:
    
    # Don't complain about abstract methods
    @(abc\.)?abstractmethod
    
    # Don't complain about platform-specific code
    pragma: no cover
    
    # Don't complain about logging
    logger\.

# Fail under this coverage percentage
fail_under = 80

[html]
# HTML report options
directory = tests/htmlcov
title = {{ project_name }} Coverage Report

[xml]
# XML report options  
output = tests/coverage.xml

[json]
# JSON report options
output = tests/coverage.json
pretty_print = True 