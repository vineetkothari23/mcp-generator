[pytest]
# Test discovery and execution settings
testpaths = tests
python_files = test_*.py
python_classes = Test*
python_functions = test_*

# Test execution settings
addopts = 
    --verbose
    --tb=short
    --strict-markers
    --cov=src/mcp_{{ service_name }}
    --cov-report=term-missing
    --cov-report=html:tests/htmlcov
    --cov-report=xml:tests/coverage.xml
    --asyncio-mode=auto
    --cov-config=.coveragerc
    --cov-fail-under=80

# Custom markers for {{ project_name }}
markers =
    unit: Unit tests
    integration: Integration tests  
    slow: Tests that take longer to run
    api: Tests requiring API access
    mcp: Tests for MCP protocol functionality
    tools: Tests for MCP tools
    server: Tests for server components
    client: Tests for API client components
    config: Tests for configuration management

# Asyncio settings
asyncio_mode = auto

# Test timeout (in seconds)
timeout = 300

# Minimum Python version required
minversion = 3.8

# Filter warnings
filterwarnings =
    ignore::DeprecationWarning
    ignore::PendingDeprecationWarning
    ignore::UserWarning:asyncio
    ignore::RuntimeWarning
    
# Coverage settings are included in addopts above 